<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#1E1E1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Datos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_admin_usuario_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre usuario"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_admin_usuario_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="correo@ejemplo.com"
                android:textColor="#A8A8A8"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/txt_admin_usuario_rol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rol: cliente"
                android:textColor="#C5C3C3"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/txt_admin_usuario_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: Activo"
                android:textColor="#8AFF8E"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btn_admin_usuario_editar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="@android:color/white"
                android:contentDescription="Editar usuario"/>

            <ImageButton
                android:id="@+id/btn_admin_usuario_bloquear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="#c42217"
                android:layout_marginTop="8dp"
                android:contentDescription="Bloquear / desbloquear"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
