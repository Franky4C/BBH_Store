<?xml version="1.0" encoding="utf-8"?>
<!-- TU DISEÑO ORIGINAL BASADO EN UN RELATIVELAYOUT. NO SE CAMBIA LA ESTRUCTURA. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    android:padding="16dp"
    tools:context=".Torneos">

    <!-- TU BOTÓN DE REGRESAR (INTACTO) -->
    <ImageButton
        android:id="@+id/btn_regresar_torneos"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Regresar al menú principal"
        android:src="@drawable/icon_04"
        app:tint="@android:color/white" />

    <!-- TU CONTENIDO CENTRAL (INTACTO EN SU DISEÑO, SÓLO CAMBIAN LOS TEXTOS) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TU Icono de trofeo (INTACTO) -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/trophy_winner_cup_icon_231645"
            android:layout_marginBottom="16dp"
            app:tint="#FFD700" />

        <!-- Título (AHORA USA @string) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/torneos_title"
            android:textColor="#8AFF8E"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Mensaje informativo (AHORA USA @string) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Preparate ¡Anunciaremos las fechas pronto!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- EL ÚNICO ELEMENTO NUEVO AÑADIDO: BOTÓN DE IDIOMA -->
    <ImageButton
        android:id="@+id/btnChangeLanguag"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Change Language"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/translation"
        app:tint="@android:color/white" />

</RelativeLayout>
