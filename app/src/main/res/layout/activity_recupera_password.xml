<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    tools:context=".RecuperaPassword">

    <!-- 1. CABECERA CONSISTENTE CON BOTÓN DE RETROCESO -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_back_recupera"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Volver al Login"
            android:src="@drawable/icon_04"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed-light"
            android:letterSpacing="0.05"
            android:text="RECUPERAR CONTRASEÑA"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_03"
                app:tint="#4CAF50"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="Ícono de candado"/>

            <!-- 2. TEXTOS INFORMATIVOS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto10"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Ingresa tu correo electrónico y te enviaremos un enlace para restablecer tu contraseña."
                android:textAlignment="center"
                android:textColor="#A0A0A0"
                android:textSize="16sp" />

            <!-- 3. CAMPO DE ENTRADA -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/campo_correo_recupera"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:hint="@string/hint01"
                android:textColorHint="#A0A0A0"
                app:boxStrokeColor="#4CAF50"
                app:hintTextColor="#4CAF50">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"/>

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Espaciador para empujar el botón hacia abajo -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- 4. BOTÓN DE ACCIÓN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_recuperar_pass_recupera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingVertical="12dp"
                android:text="@string/texto10"
                android:textSize="16sp"
                app:backgroundTint="#4CAF50"
                app:cornerRadius="8dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
