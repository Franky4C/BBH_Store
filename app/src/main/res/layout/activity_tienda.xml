<?xml version="1.0" encoding="utf-8"?>
<!-- 1. CAMBIO ESTRUCTURAL: El contenedor raíz ahora es un RelativeLayout.
    Esto es únicamente para poder superponer el botón de idioma
    sin alterar el LinearLayout que contiene todo tu diseño. -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Tienda">

    <!-- 2. TU DISEÑO ORIGINAL (INTACTO):
        Tu LinearLayout completo se coloca aquí sin ninguna modificación
        en sus atributos, colores, drawables o IDs. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Barra superior: exactamente como la diseñaste. -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_cerrar_sesion_tienda"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#0091ea"
                android:src="@drawable/icon_04"
                android:padding="10dp"
                android:contentDescription="Cerrar sesión" />

            <TextView
                android:id="@+id/usuario_tienda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Usuario"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="20dp" />

            <ImageButton
                android:id="@+id/btn_carrito_tienda"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#c42217"
                android:src="@drawable/icon_carrito"
                android:padding="10dp"
                android:contentDescription="Ver carrito" />

            <TextView
                android:id="@+id/contador_carrito_tienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical" />

            <ImageButton
                android:id="@+id/btn_favoritos_tienda"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/favs"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:contentDescription="Ver favoritos"/>

            <ImageButton
                android:id="@+id/btn_historial_tienda"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_historial"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:padding="4dp"
                android:contentDescription="Ver historial de compras" />

            <ImageButton
                android:id="@+id/btnChangeLanguage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Change Language"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/translation"
                app:tint="@android:color/white" />

        </LinearLayout>

        <!-- Título de sección: Usando @string para permitir la traducción -->
        <TextView
            android:id="@+id/txt_titulo_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuestros Productos"
            android:textColor="#8AFF8E"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView: Totalmente intacto -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/artesanias_tienda"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 3. EL ÚNICO ELEMENTO NUEVO AÑADIDO: BOTÓN DE IDIOMA
         Se coloca en la esquina superior derecha, por encima de tu LinearLayout,
         asegurando que no desplace ni modifique ninguno de tus otros botones. -->

</RelativeLayout>
