<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212"
    tools:context=".Tienda">

    <!-- Barra superior: igual estructura que tu referencia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btn_cerrar_sesion_tienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0091ea"
            android:src="@drawable/icon_04"
            android:padding="10dp"
            android:contentDescription="Cerrar sesión" />

        <TextView
            android:id="@+id/usuario_tienda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="20dp" />

        <ImageButton
            android:id="@+id/btn_carrito_tienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#c42217"
            android:src="@drawable/icon_carrito"
            android:padding="10dp"
            android:contentDescription="Ver carrito" />

        <TextView
            android:id="@+id/contador_carrito_tienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical" />

        <ImageButton
            android:id="@+id/btn_favoritos_tienda"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favs"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:contentDescription="Ver favoritos" />

    </LinearLayout>

    <!-- Título de sección (opcional) -->
    <TextView
        android:id="@+id/txt_titulo_productos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuestros Productos"
        android:textColor="#8AFF8E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView: ocupa el resto de la pantalla -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artesanias_tienda"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

</LinearLayout>
