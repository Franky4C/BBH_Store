<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:background="@android:color/transparent"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- CheckBox para seleccionar este ítem -->
        <CheckBox
            android:id="@+id/chk_seleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:buttonTint="@color/black" />

        <!-- Imagen producto -->
        <ImageView
            android:id="@+id/img_carrito_producto"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/artesania1"
            android:contentDescription="@string/app_name" />

        <!-- Información principal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/txt_carrito_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre producto"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#191919"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txt_carrito_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                android:textColor="#c42217"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txt_carrito_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stock: 0"
                android:textSize="12sp"
                android:textColor="#878787"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Controles de cantidad -->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/btn_menos"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#c42217" />

            <TextView
                android:id="@+id/txt_carrito_cantidad"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:text="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#191919" />

            <TextView
                android:id="@+id/btn_mas"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#0091EA" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
